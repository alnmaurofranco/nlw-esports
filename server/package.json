{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "author": "alnmaurofranco <alanmfrancodev@hotmail.com>",
  "license": "MIT",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "start:dev": "tsx watch src/infra/http/server.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "build": "tsc",
    "prettier:check": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:migrations": "tsx ./node_modules/.bin/prisma migrate dev --name",
    "db:migrate": "tsx ./node_modules/.bin/prisma db pull",
    "db:seed": "tsx ./node_modules/.bin/prisma db seed"
  },
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "axios": "^0.27.2",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "got": "^12.5.0",
    "handlebars": "^4.7.7",
    "nodemailer": "^6.7.8",
    "query-string": "^7.1.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/nodemailer": "^6.4.6",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.3.0",
    "eslint-plugin-promise": "^6.0.1",
    "prettier": "2.7.1",
    "prisma": "^4.3.1",
    "tsx": "^3.9.0",
    "typescript": "^4.8.3",
    "vitest": "^0.23.4"
  }
}
